---
const { img, alt, labelBtn } = Astro.props
---

<div class='flex flex-col items-center min-w-fit w-fit max-w-xs group'>
  <img src={img} alt={alt} class='h-auto' loading='lazy' />
  <a
    class='bg-gray-porsche text-white max-w-max flex justify-center items-center px-6 py-3 transition-all delay-100 duration-150 group-hover:bg-red-porsche'
    href='#'
    ><svg
      xmlns='http://www.w3.org/2000/svg'
      fill='none'
      viewBox='0 0 24 24'
      stroke-width='1.5'
      stroke='currentColor'
      class='w-6 h-6'
    >
      <path
        stroke-linecap='round'
        stroke-linejoin='round'
        d='M8.25 4.5l7.5 7.5-7.5 7.5'></path>
    </svg>
     Encuentre modelos {labelBtn}</a
  >
</div>
