---
const { img, alt, subTitleLink } = Astro.props
---

<div class='relative w-full max-w-fit h-auto group cursor-pointer'>
  <img
    class='w-full h-auto object-cover object-center'
    alt={alt}
    src={img}
    loading='lazy'
  />
  <a
    class='absolute z-40 bottom-5 left-2 w-[14.5rem] text-white text-xl font-semibold flex group-hover:text-red-600'
    href='#'
  >
    <svg
      xmlns='http://www.w3.org/2000/svg'
      width='18'
      height='18'
      fill='currentColor'
      class='bi bi-chevron-right text-red-600 stroke-2 w-5 h-5 mt-1'
      viewBox='0 0 16 16'
    >
      <path
        fill-rule='evenodd'
        d='M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z'
      ></path>
    </svg>{subTitleLink}</a
  >
</div>
